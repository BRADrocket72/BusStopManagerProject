@model WebMVC.Models.BusDriverViewModel
@{
    ViewData["Title"] = "BusDriver";
}
<link rel="stylesheet" type="text/css" href="cshtml.css">

<div>
    <h1>Bus Route Tracker</h1>

    <form method=" = "post>
        <label for = "Boarding">Boarding #</label>
        <input type="number" id="Boarding" name="Boarding"min="0"max="100">


        <label for = "Exiting">Exiting #</label>
        <input type="number" id="Exiting" name="Exiting"min="0"max="100">

        <input type="submit" value="Submit">
    </form>

    @if (ViewData["TotalPassengers"] != null)
    {
        <div>Total passengers: @ViewData["TotalPassengers"]</div>
    }
</div>