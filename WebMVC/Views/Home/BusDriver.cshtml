@model WebMVC.Models.BusDriverViewModel
@{
    ViewData["Title"] = "BusDriver";
}

<div>
    <h1>Bus Route Tracker</h1>


    <div>
        <h3>Boarding #: </h3>
        <button type="button" class="btn btn-lg"  asp-controller="BusDriverController" asp-action="IncreaseOnBoard">+</button>
            <h4>@ViewData["Boarding"]</h4>
        <button type="button" class="btn btn-lg"  asp-controller="BusDriverController" asp-action="DecreaseOnBoard">-</button>
    </div>


    <div>
        <h3>Departing #:</h3>
        <button type="button" class="btn btn-lg" asp-controller="BusDriverController" asp-action="IncreaseDeparting">+</button>
            <h4>@ViewData["Exiting"]</h4>
        <button type="button" class="btn btn-lg" asp-controller="BusDriverController" asp-action="DecreaseDeparting">-</button>
    </div>
</div>