@model BusDriverViewModel
@{
    ViewData["Title"] = "BusTracker";
}

<div>
    <h1>Bus Route Tracker</h1>


    <div>
        <h3>Boarding #: </h3>
        <button type="button" class="btn btn-lg" asp-area="" asp-controller="BusDriverController" asp-action="IncreaseOnBoard">+</button>
            <h4>@Model.Boarding</h4>
        <button type="button" class="btn btn-lg" asp-area="" asp-controller="BusDriverController" asp-action="DecreaseOnBoard">+</button>
    </div>


    <div>
        <h3>Departing #:</h3>
        <button type="button" class="btn btn-lg" asp-area="" asp-controller="BusDriverController" asp-action="IncreaseDeparting">+</button>
            <h4>@Model.Exiting</h4>
        <button type="button" class="btn btn-lg" asp-area="" asp-controller="BusDriverController" asp-action="DecreaseDeparting">+</button>
    </div>
</div>